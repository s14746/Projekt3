@model Projekt3.Models.Book

@{
    ViewData["Title"] = "Delete the book";
}

<h2>Delete the book</h2>

<p class="text-danger">Are you sure you want to delete this book?<p/>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd>@Html.DisplayFor(model => model.Author.Name) @Html.DisplayFor(model => model.Author.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Publisher)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Publisher)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PublicationDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PublicationDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="bookId" />
        <input type="submit" value="Delete" class="btn btn-success" />
        <br /><br />
        <a asp-action="Index" class="previous"> &larr; Back to List</a>
    </form>
</div>
