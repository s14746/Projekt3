@model IEnumerable<Projekt3.Models.Author>

@{
    ViewData["Title"] = "Authors";
}

<h2>Authors</h2>

<p>
    @if (User.IsInRole("admin"))
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="info">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @if (User.IsInRole("admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.authorId }, new { @class = "btn btn-link" }) @:|
                    @Html.ActionLink("Details", "Details", new { id = item.authorId }, new { @class = "btn btn-link" }) @:|
                    @Html.ActionLink("Delete", "Delete", new { id = item.authorId }, new { @class = "btn btn-link" })
                }
            </td>
        </tr>
}
    </tbody>
</table>
